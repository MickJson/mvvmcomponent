<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.czl.lib_base.mvvm.viewmodel.WebFmViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/cl_web_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/md_theme_red">

            <com.lihang.ShadowLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                app:hl_cornerRadius="@dimen/dp_20"
                app:hl_layoutBackground="@color/tran_grey_1A"
                app:layout_scrollFlags="scroll|enterAlways">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_4"
                    android:padding="@dimen/dp_10"
                    android:src="@drawable/ic_like_off_20dp"
                    binding:onClickCommand="@{viewModel.onCollectClickCommand}" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_web"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/dp_36"
                    app:hintEnabled="false"
                    app:passwordToggleEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_web"
                        style="@style/TextInputWhiteStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:drawableEnd="@drawable/ic_navigate_next_white_24dp"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="@dimen/dp_10"
                        android:text="@{viewModel.tvTitle}"
                        android:textColor="@color/white" />
                </com.google.android.material.textfield.TextInputLayout>
            </com.lihang.ShadowLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <!--        <com.just.agentweb.NestedScrollAgentWebView-->
        <!--            android:id="@+id/ll_web"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent"-->
        <!--            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"-->
        <!--            tools:context=".mvvm.ui.WebFragment">-->

        <!--        </com.just.agentweb.NestedScrollAgentWebView>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="bottom"
            android:background="@color/md_theme_red"
            android:gravity="center_vertical"
            android:weightSum="3"
            app:layout_behavior=".widget.BottomNavigationViewBehavior">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_back"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/dp_10"
                app:srcCompat="@drawable/ic_arrow_left_white" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_menu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/dp_4"
                app:srcCompat="@drawable/ic_menu_animated"
                binding:onClickCommand="@{viewModel.onMenuClickCommand}"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_forward"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/dp_14"
                app:srcCompat="@drawable/ic_arrow_right_white" />

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>