<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:binding="http://schemas.android.com/tools">

    <data>
        <import type="org.apache.commons.lang3.time.DateFormatUtils"/>
        <variable
            name="data"
            type="com.czl.lib_base.data.db.WebHistoryEntity" />
        <variable
            name="adapter"
            type="com.czl.module_user.adapter.UserBrowseAdapter" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_16"
        android:paddingTop="@dimen/dp_6"
        android:paddingEnd="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_4"
        binding:onRvItemCommand="@{}"
        binding:rvItemBean="@{data}">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="@{data.webTitle}"
            android:textColor="@color/black"
            tools:text="哔哩哔哩动画哔哩哔哩动画哔哩哔哩动画哔哩哔哩动画" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@{DateFormatUtils.format(data.browseDate,`yyyy-MM-dd HH:mm:ss`)}"
            android:textSize="@dimen/sp_12"
            tools:text="2020-12-12" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>