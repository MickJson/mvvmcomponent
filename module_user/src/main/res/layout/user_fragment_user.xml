<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:attrs="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:binding="http://schemas.android.com/tools">

    <data>

        <import type="android.text.TextUtils" />

        <variable
            name="viewModel"
            type="com.czl.module_user.viewmodel.UserViewModel" />

        <variable
            name="userData"
            type="com.czl.lib_base.data.bean.UserBean" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/iv_avatar"
            android:layout_width="80dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="@+id/ll_score"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp_20"
            app:lottie_autoPlay="true"
            app:lottie_fileName="android-logo.json"
            app:lottie_loop="true" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{TextUtils.isEmpty(userData.publicName)?`未登录`:userData.publicName}"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/iv_avatar"
            app:layout_constraintStart_toEndOf="@+id/iv_avatar"
            app:layout_constraintTop_toTopOf="@+id/iv_avatar"
            binding:onClickCommand="@{viewModel.userNameOnClickCommand}"
            tools:text="cdalwyn" />


        <com.lihang.ShadowLayout
            android:id="@+id/ll_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            app:hl_cornerRadius="@dimen/dp_10"
            app:hl_shadowColor="@color/shadow_color"
            app:hl_shadowLimit="@dimen/dp_6"
            app:layout_constraintEnd_toStartOf="@id/ll_collect"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_avatar"
            binding:onClickCommand="@{viewModel.btnScoreClickCommand}">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.tvScore}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16"
                    tools:text="600" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分"
                    android:textSize="@dimen/sp_12" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </com.lihang.ShadowLayout>

        <com.lihang.ShadowLayout
            android:id="@+id/ll_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            app:hl_cornerRadius="@dimen/dp_10"
            app:hl_shadowColor="@color/shadow_color"
            app:hl_shadowLimit="@dimen/dp_6"
            app:layout_constraintEnd_toStartOf="@id/ll_share"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toEndOf="@id/ll_score"
            app:layout_constraintTop_toTopOf="@+id/ll_score"
            binding:onClickCommand="@{viewModel.btnCollectClickCommand}">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.tvCollect}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16"
                    tools:text="600" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收藏"
                    android:textSize="@dimen/sp_12" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </com.lihang.ShadowLayout>

        <com.lihang.ShadowLayout
            android:id="@+id/ll_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            app:hl_cornerRadius="@dimen/dp_10"
            app:hl_shadowColor="@color/shadow_color"
            app:hl_shadowLimit="@dimen/dp_6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toEndOf="@id/ll_collect"
            app:layout_constraintTop_toTopOf="@+id/ll_collect">


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.tvShare}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16"
                    tools:text="600" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分享"
                    android:textSize="@dimen/sp_12" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </com.lihang.ShadowLayout>

        <com.lihang.ShadowLayout
            android:id="@+id/item_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hl_cornerRadius="@dimen/dp_10"
            app:hl_shadowColor="@color/shadow_color"
            app:hl_shadowLimit="@dimen/dp_6"
            app:layout_constraintTop_toBottomOf="@+id/ll_collect">

            <com.czl.lib_base.widget.CommonItemSettingView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_4"
                attrs:mIcon="@drawable/ic_iv_score"
                attrs:mRight="true"
                attrs:mTitle="我的积分"
                binding:onClickCommand="@{viewModel.btnScoreClickCommand}" />
        </com.lihang.ShadowLayout>

        <com.lihang.ShadowLayout
            android:id="@+id/item_collect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hl_cornerRadius="@dimen/dp_10"
            app:hl_shadowColor="@color/shadow_color"
            app:hl_shadowLimit="@dimen/dp_6"
            app:layout_constraintTop_toBottomOf="@+id/item_score">

            <com.czl.lib_base.widget.CommonItemSettingView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_4"
                attrs:mIcon="@drawable/ic_favorites"
                attrs:mRight="true"
                attrs:mTitle="我的收藏"
                binding:onClickCommand="@{viewModel.btnCollectClickCommand}"/>
        </com.lihang.ShadowLayout>

        <com.lihang.ShadowLayout
            android:id="@+id/item_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hl_cornerRadius="@dimen/dp_10"
            app:hl_shadowColor="@color/shadow_color"
            app:hl_shadowLimit="@dimen/dp_6"
            app:layout_constraintTop_toBottomOf="@+id/item_collect">

            <com.czl.lib_base.widget.CommonItemSettingView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_4"
                attrs:mIcon="@drawable/ic_iv_share"
                attrs:mRight="true"
                attrs:mTitle="我的分享" />
        </com.lihang.ShadowLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_40"
            android:padding="@dimen/dp_10"
            android:text="退出登录"
            android:textColor="@color/md_theme_red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_share"
            binding:isVisible="@{!TextUtils.isEmpty(userData.publicName)}"
            binding:onClickCommand="@{viewModel.logoutClickCommand}" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>