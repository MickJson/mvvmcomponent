<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/tools"
    >

    <data>

        <import
            alias="textUtils"
            type="android.text.TextUtils" />

        <variable
            name="viewModel"
            type="com.czl.module_main.viewmodel.HomeArticleItemVm" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@color/white"
            app:cardCornerRadius="@dimen/dp_10"
            app:cardElevation="2dp"
            app:contentPadding="@dimen/dp_10"
            app:layout_constraintTop_toTopOf="parent"
            binding:onClickCommand="@{viewModel.onArticleItemClick}">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_tv_identity"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_20"
                    android:gravity="center_vertical"
                    android:background="@{textUtils.isEmpty(viewModel.entity.author)?@drawable/stroke_green:@drawable/stroke_red}"
                    android:maxLines="1"
                    android:text="@{textUtils.isEmpty(viewModel.entity.author)?viewModel.tvShare:viewModel.tvAuthor}"
                    android:textColor="@{textUtils.isEmpty(viewModel.entity.author)?@color/green_68:@color/md_theme_red}"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintEnd_toStartOf="@id/item_tv_author"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text=" 作者 "
                    tools:textColor="@color/green_68"
                    tools:background="@drawable/stroke_green"/>

                <TextView
                    android:layout_marginStart="@dimen/dp_10"
                    android:id="@+id/item_tv_author"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_20"
                    android:maxLines="1"
                    android:text="@{textUtils.isEmpty(viewModel.entity.author)?viewModel.entity.shareUser:viewModel.entity.author}"
                    app:layout_constraintStart_toEndOf="@id/item_tv_identity"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="扔物线" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    binding:onClickCommand="@{viewModel.onCollectClickCommand}"
                    binding:src="@{viewModel.ivCollect}"
                    tools:src="@drawable/ic_like_off_gray" />

                <TextView
                    android:id="@+id/item_tv_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="@{viewModel.entity.title}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintTop_toBottomOf="@id/item_tv_identity"
                    tools:text="啊实打实大啊实打实大苏打实打实的阿三大苏打萨达萨达萨达萨达是阿斯顿撒打算啊实打实大苏打撒旦萨达萨达萨达是阿斯顿撒旦啊实打实的撒啊实打实的阿松大苏打" />

                <TextView
                    android:id="@+id/item_tv_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:maxLines="1"
                    android:text="@{viewModel.entity.superChapterName}"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/item_tv_desc"
                    tools:text="干货资源" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textSize="@dimen/sp_12"
                    android:text="@{viewModel.entity.niceShareDate}"
                    app:layout_constraintBaseline_toBaselineOf="@id/item_tv_sort"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/item_tv_desc"
                    tools:text="1天前" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</layout>
