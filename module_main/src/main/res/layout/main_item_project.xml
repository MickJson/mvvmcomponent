<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:binding="http://schemas.android.com/tools">

    <data>
        <import
            alias="textUtils"
            type="android.text.TextUtils" />

        <variable
            name="viewModel"
            type="com.czl.module_main.viewmodel.HomeProjectItemVm" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_16">


        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="@dimen/dp_10"

            app:cardCornerRadius="@dimen/dp_10"
            app:cardElevation="5dp"
            app:contentPadding="0dp"
            app:cardUseCompatPadding="false">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_item_works_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                binding:placeholderRes="@drawable/ic_default_bg"
                binding:url="@{viewModel.entity.envelopePic}"
                android:onClick="@{viewModel.onItemPicClickCommand}" />

        </androidx.cardview.widget.CardView>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:orientation="vertical"
            binding:onClickCommand="@{viewModel.onProjectItemClickCommand}">


            <TextView
                android:id="@+id/tv_item_works_name"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:ellipsize="end"
                android:maxLines="4"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                android:text="@{viewModel.entity.desc}"
                tools:text="一个轻量级的适合快速编写出一个可定制的条目设置选项类型的View。做项目的过程中发现经常要写各种各样的点击选项的条目，一般做法每一个条目都要写一个子布局里面配置一堆的View，虽然也能完成效果，但是如果数量很多会容易出错效率不高。为了方便开发，我根据作者GitLqr的代码进行修改和完善用于自己的项目中。由于原作者的项目近几年好像都没有继续维护了，于是我打算自己动手改进完善代码，并将项目开源出来。" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="@dimen/sp_12"
                android:text="@{viewModel.entity.niceShareDate}"
                tools:text="2020-10-31"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_10"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/sp_12"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:text="@{textUtils.isEmpty(viewModel.entity.author)?viewModel.tvShare:viewModel.tvAuthor}"
                    tools:text="分享："/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_author"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_24"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:paddingEnd="@dimen/dp_10"
                    android:singleLine="true"
                    android:textSize="@dimen/sp_12"
                    android:text="@{textUtils.isEmpty(viewModel.entity.author)?viewModel.entity.shareUser:viewModel.entity.author}"
                    tools:text="艺术品asdasdasdasdasasdsa阿" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingStart="@dimen/dp_8"
                    android:paddingEnd="@dimen/dp_8"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_setting_black"
                    android:onClick="@{viewModel.onItemSettingClickCommand}"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@color/white_ee" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>
